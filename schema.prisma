datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  todos Task[]
}

model Task {
  id       String    @id @default(uuid())
  summary  String
  subtask  SubTask[]
  started  Boolean
  complete Boolean
  List     List?     @relation(fields: [listId], references: [id])
  listId   String?
  User     User?     @relation(fields: [userId], references: [id])
  userId   Int?
}

model SubTask {
  id      String  @id @default(uuid())
  summary String
  Task    Task?   @relation(fields: [taskId], references: [id])
  taskId  String?
}

model List {
  id    String @id @default(uuid())
  title String
  tasks Task[]
}

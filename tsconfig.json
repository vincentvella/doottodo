{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "jsx": "preserve",
    "paths": {
      "~/*": ["./src/*"],
      "~@gorhom/bottom-sheet": ["./node_modules/@gorhom/bottom-sheet/src"],
      "~@gorhom/portal": ["./node_modules/@gorhom/portal/src"]
    },
    "isolatedModules": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "src/theme.js"]
}
